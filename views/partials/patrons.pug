
extends ../layout

block content
  h1 Patrons
  p
    a.button(href='/patron/new') Create New Patron
    input(id="searchBar" type="text" name="search" placeholder="Search for a Patron on this page...")

  p#total-items(style="margin-top: 40px;") <strong>Total Items:</strong>
    | &nbsp;
    span#page-count= count

  table(style="margin-top: 40px;")
    thead
      tr
        th Name
        th Address
        th Email
        th Library ID
        th Zip
    tbody
      each patron in patrons
        tr(id=patron.id)
          td
            a(href='/patrons/' + patron.id)
              =patron.first_name
              | &nbsp;
              =patron.last_name
          td= patron.address
          td= patron.email
          td= patron.library_id
          td= patron.zip_code

  #pagination(style="margin-top: 40px;")
